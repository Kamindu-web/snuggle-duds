<div class="custom-form-wrapper">
    <h2 class="form-title">{{ settings.form_title }}</h2>
    <p class="form-description">{{ settings.form_description }}</p>
    <form method="post" action="/contact" id="contact_form" class="kd-custom-contact-form">
      <!-- These hidden fields tell Shopify this is a contact form -->
      <input type="hidden" name="form_type" value="contact">
      <input type="hidden" name="utf8" value="âœ“">
  
      <label for="name">Name:</label>
      <input type="text" id="name" name="contact[name]" required>
  
      <label for="telephone">Telephone:</label>
      <input type="tel" id="telephone" name="contact[phone]" required>
  
      <label for="email">Email:</label>
      <input type="email" id="email" name="contact[email]" required>
  
      <label for="quantity">Quantity:</label>
      <input type="number" id="quantity" name="contact[quantity]" min="1" required>
  
      <button type="submit" class="kd-submit-btn">Submit</button>
    </form>
  </div>
  
  {% schema %}
  {
    "name": "Custom Form",
    "settings": [
      {
        "type": "text",
        "id": "form_title",
        "label": "Form Title",
        "default": "Contact Us"
      },
      {
        "type": "textarea",
        "id": "form_description",
        "label": "Form Description",
        "default": "Please fill out the form below and we will get back to you as soon as possible."
      }
    ],
    "presets": [
      {
        "name": "Custom Form"
      }
    ]
  }
  {% endschema %}
  
  <style>
    /* Container styles */
    .custom-form-wrapper {
      max-width: 900px;
      margin: 0 auto;
      padding: 20px;
    }
  
    /* Title and description */
    .form-title {
      font-size: 2em;
      margin-bottom: 10px;
      text-align: center;
    }
    .form-description {
      font-size: 1em;
      margin-bottom: 20px;
      text-align: center;
      color: #555;
    }
  
    /* Form field styles */
    .kd-custom-contact-form label {
      display: block;
      margin-bottom: 5px;
      font-weight: bold;
    }
    .kd-custom-contact-form input[type="text"],
    .kd-custom-contact-form input[type="tel"],
    .kd-custom-contact-form input[type="email"],
    .kd-custom-contact-form input[type="number"] {
      width: 100%;
      height: 40px;
      padding: 5px 10px;
      margin-bottom: 15px;
      box-sizing: border-box;
      border: 1px solid #ccc;
      border-radius: 4px;
    }
  
    /* Button styles */
    .kd-submit-btn {
      background: #5b9798;
      color: #fff;
      border: none;
      padding: 12px 20px;
      font-size: 1em;
      border-radius: 4px;
      cursor: pointer;
      width: 100%;
    }
    .kd-submit-btn:hover {
      opacity: 0.9;
    }
  
    /* Responsive adjustments */
    @media (max-width: 600px) {
      .custom-form-wrapper {
        padding: 15px;
      }
      .kd-submit-btn {
        padding: 10px 15px;
      }
    }
  </style>
  