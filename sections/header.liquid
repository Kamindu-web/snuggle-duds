{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "text",
      "id": "upper_header_text",
      "label": "Upper Header Text",
      "default": "Welcome to Snuggle Duds!"
    },
    {
      "type": "color",
      "id": "upper_header_bg",
      "label": "Upper Header Background Color",
      "default": "#487575"
    },
    {
      "type": "text",
      "id": "contact_phone",
      "label": "Contact Phone",
      "default": "+61 234 567 890"
    },
    {
      "type": "text",
      "id": "contact_location",
      "label": "Contact Location",
      "default": "Sydney, Australia"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ]
}
{% endschema %}

<style>
  /* Upper Header */
  .upper-header {
    background-color: {{ settings.upper_header_bg }};
    color: #fff;
    text-align: center;
    padding: 10px 0;
    font-size: 14px;
  }
  .upper-header .contact-info {
    float: right;
  }

  /* Main Header */
  .main-header {
    background: #fff;
    padding: 15px 0;
    border-bottom: 1px solid #ddd;
  }
  .container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .logo img {
    max-width: 150px;
  }
  .site-nav ul {
    list-style: none;
    display: flex;
    gap: 20px;
  }
  .site-nav a {
    text-decoration: none;
    color: #333;
    font-weight: bold;
  }
  .header-icons a {
    margin-left: 15px;
    font-size: 18px;
    text-decoration: none;
  }
  .menu-toggle {
    display: none;
    background: none;
    border: none;
    font-size: 24px;
  }
  @media (max-width: 768px) {
    .site-nav {
      display: none;
    }
    .menu-toggle {
      display: block;
    }
  }
</style>

<header class="site-header">
  <!-- Upper Header -->
  <div class="upper-header" style="background-color: {{ section.settings.upper_header_bg }}">
    <div class="container text-center">
      <p>{{ settings.upper_header_text | default: "Welcome to Snuggle Duds!" }}</p>
    </div>
  </div>

  <!-- Middle Header (Logo & Contact Info) -->
  <div class="main-header">
    <div class="container">
      <div class="logo">
        {% if settings.logo %}
          <img src="{{ settings.logo | img_url: '250x' }}" alt="{{ shop.name }}">
        {% else %}
          <h1>{{ shop.name }}</h1>
        {% endif %}
      </div>

      <!-- Contact Info -->
      <div class="contact-info">
        <p>
          üìû <a href="tel:{{ settings.contact_phone }}">{{ settings.contact_phone }}</a> |
          üìç {{ settings.contact_location }}
        </p>
      </div>

      <!-- Icons (Account, Wishlist, Cart) -->
      <div class="header-icons">
        <a href="{{ routes.account_url }}">üë§</a>
        <a href="/wishlist">‚ù§Ô∏è</a>
        <a href="{{ routes.cart_url }}">üõí ({{ cart.item_count }})</a>
      </div>
    </div>
  </div>

  <!-- Navigation -->
  <div class="nav-container">
    <div class="container">
      <nav class="site-nav">
        <ul>
          {% if linklists.main-menu.links.size > 0 %}
            {% for link in linklists.main-menu.links %}
              <li><a href="{{ link.url }}">{{ link.title }}</a></li>
            {% endfor %}
          {% else %}
            <li>No Menu Items Found</li>
          {% endif %}
        </ul>
      </nav>
    </div>
  </div>

</header>
