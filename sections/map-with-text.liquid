{% schema %}
{
  "name": "Map With Contact Info",
  "settings": [
    {
      "type": "textarea",
      "id": "mapEmbed",
      "label": "Map Embed Code"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ],
  "blocks": [
    {
      "type": "contact_info",
      "name": "Contact Information",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "phone", "label": "Phone" },
            { "value": "email", "label": "Email" },
            { "value": "location", "label": "Address" }
          ],
          "default": "phone"
        },
        {
          "type": "text",
          "id": "content",
          "label": "Content (Phone, Email, Address)"
        },
        {
          "type": "text",
          "id": "link",
          "label": "Link (For phone & email)",
          "default": "#"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Map With Contact Info",
      "category": "Contact"
    }
  ]
}
{% endschema %}

<section class="kd-contact-wrapper">
    <div class="row align-items-center">
        <!-- Map on the Left -->
        <div class="col-md-6 kd-map-wrapper">
            {{ section.settings.mapEmbed }}
        </div>

        <!-- Contact Info on the Right -->
        <div class="col-md-6">
            <div class="kd-contact-content">
                {% if section.settings.title != blank %}
                    <h2>{{ section.settings.title }}</h2>
                {% endif %}
                {% if section.settings.description != blank %}
                    <p>{{ section.settings.description }}</p>
                {% endif %}

                <!-- Contact Information List -->
                <ul class="kd-contact-list">
                    {% for block in section.blocks %}
                        <li class="kd-contact-item">
                            {% case block.settings.icon %}
                                {% when "phone" %}
                                    <img src="{{ 'phone-icon.png' | asset_url }}" alt="Phone">
                                    <a href="tel:{{ block.settings.content }}">{{ block.settings.content }}</a>
                                {% when "email" %}
                                    <img src="{{ 'email-icon.png' | asset_url }}" alt="Email">
                                    <a href="mailto:{{ block.settings.content }}">{{ block.settings.content }}</a>
                                {% when "location" %}
                                    <img src="{{ 'location-icon.png' | asset_url }}" alt="Location">
                                    <span>{{ block.settings.content }}</span>
                            {% endcase %}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</section>

<style>
.kd-contact-wrapper {
    padding: 40px 0;
}
.kd-map-wrapper iframe {
    width: 100%;
    height: 350px;
    border: 0;
}
.kd-contact-content {
    text-align: left;
    padding: 20px;
}
.kd-contact-list {
    list-style: none;
    padding: 0;
    margin: 0;
}
.kd-contact-item {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 10px;
}
.kd-contact-item img {
    width: 24px;
    height: 24px;
}
.kd-contact-item a {
    text-decoration: none;
    color: #000;
    font-weight: bold;
}
.kd-contact-item span {
    font-weight: bold;
}
</style>
