

<section class="slider">
  <div class="swiper-container kd-main-slider-container">
      <div class="swiper mySwiper kd-slider">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              {% if block.type == 'main_slide' %}
                <div class="swiper-slide">
                  <img src="{{ block.settings.background_img | img_url : 'master' }}" alt="Slide 1">
              </div>
              {% endif %}
            {% endfor %}

          </div>

          <!-- Navigation Arrows -->
          <div class="swiper-button-next"></div>
          <div class="swiper-button-prev"></div>

          <!-- Pagination -->
          <div class="swiper-pagination"></div>
      </div>
  </div>
</section>

{% schema %}
{
  "name": "Main Slider",
  "settings": [],
  "blocks": [
    {
      "type": "main_slide",
      "name": "Slide",
      "settings": [
        {
          "type": "text",
          "id": "title_sub_text",
          "label": "Sub Title"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "btn_title",
          "label": "Button Title"
        },
        {
          "type": "image_picker",
          "id": "background_img",
          "label": "Background Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Main Slider",
      "blocks": [
        {
          "type": "main_slide"
        }
      ]
    }
  ]
}
{% endschema %}
