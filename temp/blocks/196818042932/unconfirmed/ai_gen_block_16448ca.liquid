          data-template="kids"
        >
          Kids
        </button>
        <button
          class="ai-tshirt-customizer__template-btn-{{ ai_gen_id }}"
          data-template="adult"
        >
          Adult
        </button>
      </div>
    </div>

    <div class="ai-tshirt-customizer__section-{{ ai_gen_id }}">
      <label class="ai-tshirt-customizer__label-{{ ai_gen_id }}">{{ block.settings.color_label }}</label>
      <div class="ai-tshirt-customizer__color-palette-{{ ai_gen_id }}">
        {% for i in (1..12) %}
          {% assign color_key = 'color_' | append: i %}
          {% assign color_value = block.settings[color_key] %}
          {% assign kids_image_key = 'color_' | append: i | append: '_kids_image' %}
          {% assign adult_image_key = 'color_' | append: i | append: '_adult_image' %}
          {% assign kids_image = block.settings[kids_image_key] %}
          {% assign adult_image = block.settings[adult_image_key] %}
          
          {% if color_value != blank %}
            <button
              class="ai-tshirt-customizer__color-option-{{ ai_gen_id }} {% if i == 1 %}active{% endif %}"
              data-color="{{ color_value }}"
              data-kids-image="{% if kids_image %}{{ kids_image | image_url: width: 1000 }}{% endif %}"
              data-adult-image="{% if adult_image %}{{ adult_image | image_url: width: 1000 }}{% endif %}"
              style="background-color: {{ color_value }};"
              aria-label="Select color {{ i }}"
            ></button>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <div class="ai-tshirt-customizer__section-{{ ai_gen_id }}">
      <label class="ai-tshirt-customizer__label-{{ ai_gen_id }}">{{ block.settings.design_label }}</label>
      <div class="ai-tshirt-customizer__design-gallery-{{ ai_gen_id }}">
        {% for i in (1..12) %}
          {% assign design_key = 'design_' | append: i %}
          {% assign design_value = block.settings[design_key] %}
          {% if design_value != blank %}
            <div
              class="ai-tshirt-customizer__design-item-{{ ai_gen_id }}"
              data-design="{{ design_value | image_url: width: 800 }}"
            >
              <img
                src="{{ design_value | image_url: width: 200 }}"
                alt="Design {{ i }}"
                loading="lazy"
              >
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    {% if block.settings.allow_custom_upload %}
      <div class="ai-tshirt-customizer__section-{{ ai_gen_id }}">
        <label class="ai-tshirt-customizer__label-{{ ai_gen_id }}">{{ block.settings.upload_label }}</label>
        <div class="ai-tshirt-customizer__upload-area-{{ ai_gen_id }}">
          <svg class="ai-tshirt-customizer__upload-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
