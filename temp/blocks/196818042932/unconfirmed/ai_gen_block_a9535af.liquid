<script>
  (function() {
    class TshirtCustomizer{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentColor = null;
        this.currentColorName = '';
        this.currentTemplate = 'kids';
        this.currentDesign = null;
        this.currentDesignName = '';
        this.currentSize = null;
        this.designVertical = 28;
        this.designHorizontal = 50;
        this.designSize = 35;
      }

      connectedCallback() {
        this.colorButtons = this.querySelectorAll('.ai-tshirt-customizer__color-option-{{ ai_gen_id }}');
        this.templateButtons = this.querySelectorAll('.ai-tshirt-customizer__template-btn-{{ ai_gen_id }}');
        this.designItems = this.querySelectorAll('.ai-tshirt-customizer__design-item-{{ ai_gen_id }}');
        this.sizeButtons = this.querySelectorAll('.ai-tshirt-customizer__size-btn-{{ ai_gen_id }}');
        this.uploadArea = this.querySelector('.ai-tshirt-customizer__upload-area-{{ ai_gen_id }}');
        this.fileInput = this.querySelector('.ai-tshirt-customizer__file-input-{{ ai_gen_id }}');
        this.tshirtImage = this.querySelector('.ai-tshirt-customizer__tshirt-image-{{ ai_gen_id }}');
        this.placeholder = this.querySelector('.ai-tshirt-customizer__placeholder-{{ ai_gen_id }}');
        this.designWrapper = this.querySelector('.ai-tshirt-customizer__design-wrapper-{{ ai_gen_id }}');
        this.designImage = this.querySelector('.ai-tshirt-customizer__design-image-{{ ai_gen_id }}');
        this.quantityInput = this.querySelector('.ai-tshirt-customizer__quantity-input-{{ ai_gen_id }}');
        this.form = this.querySelector('.ai-tshirt-customizer__form');
        this.sliders = this.querySelectorAll('.ai-tshirt-customizer__slider-{{ ai_gen_id }}');

        this.hiddenTemplate = this.querySelector('.ai-tshirt-customizer__hidden-template-{{ ai_gen_id }}');
        this.hiddenColor = this.querySelector('.ai-tshirt-customizer__hidden-color-{{ ai_gen_id }}');
        this.hiddenDesign = this.querySelector('.ai-tshirt-customizer__hidden-design-{{ ai_gen_id }}');
        this.hiddenSize = this.querySelector('.ai-tshirt-customizer__hidden-size-{{ ai_gen_id }}');
        this.hiddenQuantity = this.querySelector('.ai-tshirt-customizer__hidden-quantity-{{ ai_gen_id }}');
        this.hiddenPosition = this.querySelector('.ai-tshirt-customizer__hidden-position-{{ ai_gen_id }}');

        this.setupEventListeners();
        this.initializeFirstColor();
      }

      setupEventListeners() {
        this.colorButtons.forEach(button => {
          button.addEventListener('click', () => this.handleColorChange(button));
        });

        this.templateButtons.forEach(button => {
          button.addEventListener('click', () => this.handleTemplateChange(button));
        });

        this.designItems.forEach(item => {
          item.addEventListener('click', () => this.handleDesignSelect(item));
        });

        this.sizeButtons.forEach(button => {
          button.addEventListener('click', () => this.handleSizeSelect(button));
        });

        this.sliders.forEach(slider => {
          slider.addEventListener('input', (e) => this.handleSliderChange(e));
        });

        if (this.uploadArea) {
          this.uploadArea.addEventListener('click', () => {
            this.fileInput.click();
          });

          this.fileInput.addEventListener('change', (e) => {
            this.handleFileUpload(e);
          });
        }

        if (this.quantityInput) {
          this.quantityInput.addEventListener('input', () => {
            this.updateHiddenFields();
          });
        }

        if (this.form) {
          this.form.addEventListener('submit', (e) => {
            this.updateHiddenFields();
          });
        }
      }

      initializeFirstColor() {
        const firstColorButton = this.querySelector('.ai-tshirt-customizer__color-option-{{ ai_gen_id }}.active');
        if (firstColorButton) {
          this.currentColor = firstColorButton.dataset.color;
          this.currentColorName = firstColorButton.dataset.colorName;
          this.updateTshirtImage(firstColorButton);
          this.updateHiddenFields();
        }
      }

      handleColorChange(button) {
        this.colorButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');
        
        this.currentColor = button.dataset.color;
        this.currentColorName = button.dataset.colorName;
        this.updateTshirtImage(button);
        this.updateHiddenFields();
      }

      handleTemplateChange(button) {
        this.templateButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');
        
        this.currentTemplate = button.dataset.template;
        
        const activeColorButton = this.querySelector('.ai-tshirt-customizer__color-option-{{ ai_gen_id }}.active');
        if (activeColorButton) {
          this.updateTshirtImage(activeColorButton);
        }
        this.updateHiddenFields();
      }

      handleSizeSelect(button) {
        this.sizeButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');
        
        this.currentSize = button.dataset.size;
        this.updateHiddenFields();
      }

      handleSliderChange(event) {
        const slider = event.target;
        const control = slider.dataset.control;
        const value = slider.value;
        
        const valueDisplay = this.querySelector(`[data-slider="${control}"]`);
        if (valueDisplay) {
          valueDisplay.textContent = value + '%';
        }

        if (control === 'vertical') {
          this.designVertical = value;
        } else if (control === 'horizontal') {
          this.designHorizontal = value;
        } else if (control === 'size') {
          this.designSize = value;
        }

        this.updateDesignPosition();
        this.updateHiddenFields();
      }

      updateDesignPosition() {
        if (this.designWrapper) {
          this.designWrapper.style.marginTop = this.designVertical + '%';
          this.designWrapper.style.marginLeft = (this.designHorizontal - 50) + '%';
          this.designWrapper.style.width = this.designSize + '%';
        }
      }

      updateTshirtImage(colorButton) {
        let imageUrl = '';
        
        if (this.currentTemplate === 'kids') {
          imageUrl = colorButton.dataset.kidsImage;
        } else if (this.currentTemplate === 'adult') {
          imageUrl = colorButton.dataset.adultImage;
        }

        if (imageUrl) {
          this.tshirtImage.src = imageUrl;
          this.tshirtImage.style.display = 'block';
          this.placeholder.style.display = 'none';
        } else {
          this.tshirtImage.style.display = 'none';
          this.placeholder.style.display = 'flex';
        }
      }

      handleDesignSelect(item) {
        this.designItems.forEach(design => design.classList.remove('active'));
        item.classList.add('active');
        
        const designUrl = item.dataset.design;
        this.currentDesign = designUrl;
        this.currentDesignName = item.dataset.designName;
        
        this.designImage.src = designUrl;
        this.designImage.style.display = 'block';
        this.updateDesignPosition();
        this.updateHiddenFields();
      }

      handleFileUpload(event) {
        const file = event.target.files[0];
        if (file && file.type.startsWith('image/')) {
          const reader = new FileReader();
          
          reader.onload = (e) => {
            this.designItems.forEach(design => design.classList.remove('active'));
            
            this.designImage.src = e.target.result;
            this.designImage.style.display = 'block';
            this.currentDesign = e.target.result;
            this.currentDesignName = 'Custom Upload: ' + file.name;
            this.updateDesignPosition();
            this.updateHiddenFields();
          };
          
          reader.readAsDataURL(file);
        }
      }

      updateHiddenFields() {
        if (this.hiddenTemplate) {
          this.hiddenTemplate.value = this.currentTemplate ? this.currentTemplate.charAt(0).toUpperCase() + this.currentTemplate.slice(1) : '';
        }
        if (this.hiddenColor) {
          this.hiddenColor.value = this.currentColorName || '';
        }
        if (this.hiddenDesign) {
          this.hiddenDesign.value = this.currentDesignName || 'No design selected';
        }
        if (this.hiddenSize) {
          this.hiddenSize.value = this.currentSize || 'No size selected';
        }
        if (this.hiddenQuantity && this.quantityInput) {
          this.hiddenQuantity.value = this.quantityInput.value || '1';
        }
        if (this.hiddenPosition) {
          this.hiddenPosition.value = `Vertical: ${this.designVertical}%, Horizontal: ${this.designHorizontal}%, Size: ${this.designSize}%`;
        }
      }
    }

    customElements.define('tshirt-customizer-{{ ai_gen_id }}', TshirtCustomizer{{ ai_gen_id }});
  })();
</script>

