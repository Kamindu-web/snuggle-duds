<script>
  (function() {
    class TshirtCustomizer{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentColor = '{{ block.settings.color_1 }}';
        this.currentTemplate = 'male';
      }

      connectedCallback() {
        this.colorButtons = this.querySelectorAll('.ai-tshirt-customizer__color-option-{{ ai_gen_id }}');
        this.templateButtons = this.querySelectorAll('.ai-tshirt-customizer__template-btn-{{ ai_gen_id }}');
        this.uploadArea = this.querySelector('.ai-tshirt-customizer__upload-area-{{ ai_gen_id }}');
        this.fileInput = this.querySelector('.ai-tshirt-customizer__file-input-{{ ai_gen_id }}');
        this.svgContainer = this.querySelector('.ai-tshirt-customizer__tshirt-svg-{{ ai_gen_id }}');
        this.designOverlay = this.querySelector('.ai-tshirt-customizer__design-overlay-{{ ai_gen_id }}');
        this.designImage = this.querySelector('.ai-tshirt-customizer__design-image-{{ ai_gen_id }}');

        this.setupEventListeners();
      }

      setupEventListeners() {
        this.colorButtons.forEach(button => {
          button.addEventListener('click', () => this.handleColorChange(button));
        });

        this.templateButtons.forEach(button => {
          button.addEventListener('click', () => this.handleTemplateChange(button));
        });

        this.uploadArea.addEventListener('click', () => {
          this.fileInput.click();
        });

        this.fileInput.addEventListener('change', (e) => {
          this.handleFileUpload(e);
        });
      }

      handleColorChange(button) {
        this.colorButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');
        
        this.currentColor = button.dataset.color;
        const paths = this.svgContainer.querySelectorAll('path[fill], ellipse[fill]');
        paths.forEach(path => {
          if (path.getAttribute('fill') !== 'none' && !path.getAttribute('fill').includes('url')) {
            path.setAttribute('fill', this.currentColor);
          }
        });
      }

      handleTemplateChange(button) {
        this.templateButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');
        
        this.currentTemplate = button.dataset.template;
        this.updateTshirtShape();
        this.updateDesignOverlay();
      }

      updateTshirtShape() {
        const shapes = {
          male: {
            body: 'M 140 80 L 155 60 Q 165 50 175 48 L 185 50 Q 200 45 215 50 L 225 48 Q 235 50 245 60 L 260 80 L 290 70 L 310 110 L 295 130 L 295 450 L 85 450 L 85 130 L 70 110 L 90 70 Z',
            neck: { cx: 200, cy: 55, rx: 22, ry: 15 },
            shoulder: 'M 140 80 L 155 60 Q 165 50 175 48 L 185 50 Q 200 45 215 50 L 225 48 Q 235 50 245 60 L 260 80'
          },
          female: {
            body: 'M 145 85 L 158 65 Q 168 55 178 53 L 188 55 Q 200 50 212 55 L 222 53 Q 232 55 242 65 L 255 85 L 280 78 L 295 115 Q 290 180 280 240 L 275 450 L 105 450 L 100 240 Q 90 180 85 115 L 100 78 Z',
            neck: { cx: 200, cy: 58, rx: 20, ry: 13 },
            shoulder: 'M 145 85 L 158 65 Q 168 55 178 53 L 188 55 Q 200 50 212 55 L 222 53 Q 232 55 242 65 L 255 85'
          },
          kids: {
            body: 'M 150 90 L 162 72 Q 170 64 178 62 L 186 64 Q 200 60 214 64 L 222 62 Q 230 64 238 72 L 250 90 L 275 83 L 290 118 L 278 135 L 278 430 L 102 430 L 102 135 L 90 118 L 105 83 Z',
            neck: { cx: 200, cy: 67, rx: 19, ry: 13 },
            shoulder: 'M 150 90 L 162 72 Q 170 64 178 62 L 186 64 Q 200 60 214 64 L 222 62 Q 230 64 238 72 L 250 90'
          },
          adult: {
            body: 'M 135 78 L 152 58 Q 162 48 172 46 L 182 48 Q 200 43 218 48 L 228 46 Q 238 48 248 58 L 265 78 L 298 68 L 318 108 L 300 128 L 300 460 L 80 460 L 80 128 L 62 108 L 82 68 Z',
            neck: { cx: 200, cy: 53, rx: 24, ry: 16 },
            shoulder: 'M 135 78 L 152 58 Q 162 48 172 46 L 182 48 Q 200 43 218 48 L 228 46 Q 238 48 248 58 L 265 78'
          }
        };

        const shape = shapes[this.currentTemplate];
        const group = this.svgContainer.querySelector('.ai-tshirt-customizer__tshirt-group-{{ ai_gen_id }}');
        
        const bodyPath = group.querySelector('path:first-of-type');
        const neckEllipse = group.querySelector('ellipse');
        const shoulderPath = group.querySelectorAll('path')[1];
        
        bodyPath.setAttribute('d', shape.body);
        neckEllipse.setAttribute('cx', shape.neck.cx);
        neckEllipse.setAttribute('cy', shape.neck.cy);
        neckEllipse.setAttribute('rx', shape.neck.rx);
        neckEllipse.setAttribute('ry', shape.neck.ry);
        shoulderPath.setAttribute('d', shape.shoulder);
      }

      updateDesignOverlay() {
        this.designOverlay.className = 'ai-tshirt-customizer__design-overlay-{{ ai_gen_id }} ai-tshirt-customizer__design-overlay-{{ ai_gen_id }}--' + this.currentTemplate;
      }

      handleFileUpload(event) {
        const file = event.target.files[0];
        if (file && file.type.startsWith('image/')) {
          const reader = new FileReader();
          
          reader.onload = (e) => {
            this.designImage.src = e.target.result;
            this.designImage.style.display = 'block';
          };
          
          reader.readAsDataURL(file);
        }
      }
    }

    customElements.define('tshirt-customizer-{{ ai_gen_id }}', TshirtCustomizer{{ ai_gen_id }});
  })();
</script>

