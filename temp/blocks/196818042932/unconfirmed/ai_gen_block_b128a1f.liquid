{% doc %}
  @prompt
    T-shirt Customization:
    
    Select T-shirt color from a palette.
    
    Choose between male, female, kids, and adult T-shirt templates.
    
    Real-time preview of the uploaded design on the T-shirt mockup., need real t shirt design for live preview
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-tshirt-customizer-{{ ai_gen_id }} {
    display: flex;
    gap: 40px;
    padding: 40px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    flex-wrap: wrap;
  }

  .ai-tshirt-customizer__controls-{{ ai_gen_id }} {
    flex: 1;
    min-width: 300px;
  }

  .ai-tshirt-customizer__preview-{{ ai_gen_id }} {
    flex: 1;
    min-width: 300px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .ai-tshirt-customizer__section-{{ ai_gen_id }} {
    margin-bottom: 30px;
  }

  .ai-tshirt-customizer__label-{{ ai_gen_id }} {
    display: block;
    font-size: {{ block.settings.label_size }}px;
    font-weight: 600;
    margin-bottom: 12px;
    color: {{ block.settings.text_color }};
  }

  .ai-tshirt-customizer__color-palette-{{ ai_gen_id }} {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
  }

  .ai-tshirt-customizer__color-option-{{ ai_gen_id }} {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    border: 3px solid transparent;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .ai-tshirt-customizer__color-option-{{ ai_gen_id }}:hover {
    transform: scale(1.1);
  }

  .ai-tshirt-customizer__color-option-{{ ai_gen_id }}.active {
    border-color: {{ block.settings.accent_color }};
    box-shadow: 0 0 0 2px {{ block.settings.background_color }}, 0 0 0 4px {{ block.settings.accent_color }};
  }

  .ai-tshirt-customizer__template-options-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
  }

  .ai-tshirt-customizer__template-btn-{{ ai_gen_id }} {
    padding: 12px 20px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    border: 2px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_radius }}px;
    cursor: pointer;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .ai-tshirt-customizer__template-btn-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg }};
    color: {{ block.settings.button_hover_text }};
  }

  .ai-tshirt-customizer__template-btn-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.accent_color }};
    color: #ffffff;
    border-color: {{ block.settings.accent_color }};
  }

  .ai-tshirt-customizer__upload-area-{{ ai_gen_id }} {
    border: 2px dashed {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    padding: 30px;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .ai-tshirt-customizer__upload-area-{{ ai_gen_id }}:hover {
    border-color: {{ block.settings.accent_color }};
    background-color: rgba(0, 0, 0, 0.02);
  }

  .ai-tshirt-customizer__upload-icon-{{ ai_gen_id }} {
    width: 48px;
    height: 48px;
    margin: 0 auto 12px;
    color: {{ block.settings.accent_color }};
  }

  .ai-tshirt-customizer__upload-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: 14px;
  }

  .ai-tshirt-customizer__file-input-{{ ai_gen_id }} {
    display: none;
  }

  .ai-tshirt-customizer__preview-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: 450px;
  }

  .ai-tshirt-customizer__tshirt-svg-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    filter: drop-shadow(0 10px 20px rgba(0, 0, 0, 0.1));
  }

  .ai-tshirt-customizer__design-overlay-{{ ai_gen_id }} {
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: none;
  }

  .ai-tshirt-customizer__design-overlay-{{ ai_gen_id }}--male {
    top: 28%;
    left: 50%;
    transform: translateX(-50%);
    width: 35%;
    height: 35%;
  }

  .ai-tshirt-customizer__design-overlay-{{ ai_gen_id }}--female {
    top: 26%;
    left: 50%;
    transform: translateX(-50%);
    width: 32%;
    height: 32%;
  }

  .ai-tshirt-customizer__design-overlay-{{ ai_gen_id }}--kids {
    top: 30%;
    left: 50%;
    transform: translateX(-50%);
    width: 30%;
    height: 30%;
  }

  .ai-tshirt-customizer__design-overlay-{{ ai_gen_id }}--adult {
    top: 27%;
    left: 50%;
    transform: translateX(-50%);
    width: 36%;
    height: 36%;
  }

  .ai-tshirt-customizer__design-image-{{ ai_gen_id }} {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .ai-tshirt-customizer__preview-label-{{ ai_gen_id }} {
    margin-top: 20px;
    font-size: 16px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-tshirt-customizer-{{ ai_gen_id }} {
      flex-direction: column;
      padding: 20px;
    }

    .ai-tshirt-customizer__template-options-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

