          data-color="{{ block.settings.color_2 }}"
          style="background-color: {{ block.settings.color_2 }};"
          aria-label="Select {{ block.settings.color_2_name }}"
        ></button>
        <button
          class="ai-tshirt-customizer__color-option-{{ ai_gen_id }}"
          data-color="{{ block.settings.color_3 }}"
          style="background-color: {{ block.settings.color_3 }};"
          aria-label="Select {{ block.settings.color_3_name }}"
        ></button>
        <button
          class="ai-tshirt-customizer__color-option-{{ ai_gen_id }}"
          data-color="{{ block.settings.color_4 }}"
          style="background-color: {{ block.settings.color_4 }};"
          aria-label="Select {{ block.settings.color_4_name }}"
        ></button>
        <button
          class="ai-tshirt-customizer__color-option-{{ ai_gen_id }}"
          data-color="{{ block.settings.color_5 }}"
          style="background-color: {{ block.settings.color_5 }};"
          aria-label="Select {{ block.settings.color_5_name }}"
        ></button>
        <button
          class="ai-tshirt-customizer__color-option-{{ ai_gen_id }}"
          data-color="{{ block.settings.color_6 }}"
          style="background-color: {{ block.settings.color_6 }};"
          aria-label="Select {{ block.settings.color_6_name }}"
        ></button>
      </div>
    </div>

    <div class="ai-tshirt-customizer__section-{{ ai_gen_id }}">
      <label class="ai-tshirt-customizer__label-{{ ai_gen_id }}">{{ block.settings.template_label }}</label>
      <div class="ai-tshirt-customizer__template-options-{{ ai_gen_id }}">
        <button
          class="ai-tshirt-customizer__template-btn-{{ ai_gen_id }} active"
          data-template="male"
        >
          Male
        </button>
        <button
          class="ai-tshirt-customizer__template-btn-{{ ai_gen_id }}"
          data-template="female"
        >
          Female
        </button>
        <button
          class="ai-tshirt-customizer__template-btn-{{ ai_gen_id }}"
          data-template="kids"
        >
          Kids
        </button>
