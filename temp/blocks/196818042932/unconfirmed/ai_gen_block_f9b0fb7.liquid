{% doc %}
  @prompt
    customized t shirt mockups
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-tshirt-mockup-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-tshirt-mockup__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-tshirt-mockup__heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 {{ block.settings.spacing }}px;
  }

  .ai-tshirt-mockup__description-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    color: {{ block.settings.text_color }};
    margin: 0 0 {{ block.settings.spacing }}px;
    opacity: 0.8;
  }

  .ai-tshirt-mockup__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-top: {{ block.settings.spacing }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-tshirt-mockup__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }
  }

  .ai-tshirt-mockup__item-{{ ai_gen_id }} {
    position: relative;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_radius }}px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 }});
  }

  .ai-tshirt-mockup__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-top: {{ block.settings.image_ratio }}%;
    overflow: hidden;
  }

  .ai-tshirt-mockup__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-tshirt-mockup__placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-tshirt-mockup__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-tshirt-mockup__badge-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    right: 12px;
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-tshirt-mockup__content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
    text-align: {{ block.settings.card_text_alignment }};
  }

  .ai-tshirt-mockup__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 8px;
    font-weight: 600;
  }

  .ai-tshirt-mockup__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 12px;
    opacity: 0.7;
  }

  .ai-tshirt-mockup__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: 700;
    margin: 0 0 16px;
  }

  .ai-tshirt-mockup__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_radius }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-tshirt-mockup__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
  }

  .ai-tshirt-mockup__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 4px;
    font-size: 12px;
    color: #666;
    text-align: center;
    pointer-events: none;
    white-space: nowrap;
  }
{% endstyle %}

<div class="ai-tshirt-mockup-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-tshirt-mockup__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-tshirt-mockup__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.description != blank %}
      <div class="ai-tshirt-mockup__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
    {% endif %}

    <div class="ai-tshirt-mockup__grid-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign image_key = 'mockup_image_' | append: i
          assign title_key = 'mockup_title_' | append: i
          assign subtitle_key = 'mockup_subtitle_' | append: i
          assign price_key = 'mockup_price_' | append: i
          assign badge_key = 'mockup_badge_' | append: i
          assign button_text_key = 'mockup_button_text_' | append: i
          assign button_link_key = 'mockup_button_link_' | append: i
          assign show_mockup_key = 'show_mockup_' | append: i

          assign mockup_image = block.settings[image_key]
          assign mockup_title = block.settings[title_key]
          assign mockup_subtitle = block.settings[subtitle_key]
          assign mockup_price = block.settings[price_key]
          assign mockup_badge = block.settings[badge_key]
          assign mockup_button_text = block.settings[button_text_key]
          assign mockup_button_link = block.settings[button_link_key]
          assign show_mockup = block.settings[show_mockup_key]
        %}

        {% if show_mockup %}
          <div class="ai-tshirt-mockup__item-{{ ai_gen_id }}">
            <div class="ai-tshirt-mockup__image-wrapper-{{ ai_gen_id }}">
              {% if mockup_image %}
                <img
                  src="{{ mockup_image | image_url: width: 800 }}"
                  alt="{{ mockup_title | escape }}"
                  loading="lazy"
                  width="{{ mockup_image.width }}"
                  height="{{ mockup_image.height }}"
                  class="ai-tshirt-mockup__image-{{ ai_gen_id }}"
                >
              {% else %}
                <div class="ai-tshirt-mockup__placeholder-{{ ai_gen_id }}">
                  {{ 'product-apparel-1' | placeholder_svg_tag }}
                  <div class="ai-tshirt-mockup__empty-state-{{ ai_gen_id }}">
                    Add mockup image {{ i }}
                  </div>
                </div>
              {% endif %}

              {% if mockup_badge != blank %}
                <div class="ai-tshirt-mockup__badge-{{ ai_gen_id }}">{{ mockup_badge }}</div>
              {% endif %}
            </div>

            <div class="ai-tshirt-mockup__content-{{ ai_gen_id }}">
              {% if mockup_title != blank %}
                <h3 class="ai-tshirt-mockup__title-{{ ai_gen_id }}">{{ mockup_title }}</h3>
              {% endif %}

              {% if mockup_subtitle != blank %}
                <p class="ai-tshirt-mockup__subtitle-{{ ai_gen_id }}">{{ mockup_subtitle }}</p>
              {% endif %}

              {% if mockup_price != blank %}
                <div class="ai-tshirt-mockup__price-{{ ai_gen_id }}">{{ mockup_price }}</div>
              {% endif %}

              {% if mockup_button_text != blank and mockup_button_link != blank %}
                <a href="{{ mockup_button_link }}" class="ai-tshirt-mockup__button-{{ ai_gen_id }}">
                  {{ mockup_button_text }}
                </a>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

