{% doc %}
  @prompt
    add search bar
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-search-bar-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
  }

  .ai-search-bar-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
  }

  .ai-search-bar-form-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
  }

  .ai-search-bar-input-wrapper-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    align-items: center;
    background-color: {{ block.settings.background_color }};
    border: {{ block.settings.border_thickness }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
  }

  .ai-search-bar-icon-{{ ai_gen_id }} {
    position: absolute;
    left: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.icon_color }};
    pointer-events: none;
  }

  .ai-search-bar-icon-{{ ai_gen_id }} svg {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
  }

  .ai-search-bar-input-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.input_padding }}px {{ block.settings.input_padding }}px {{ block.settings.input_padding }}px calc({{ block.settings.icon_size }}px + 32px);
    border: none;
    background: transparent;
    font-size: {{ block.settings.font_size }}px;
    color: {{ block.settings.text_color }};
    outline: none;
  }

  .ai-search-bar-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.placeholder_color }};
    opacity: 0.7;
  }

  .ai-search-bar-button-{{ ai_gen_id }} {
    padding: {{ block.settings.input_padding }}px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    cursor: pointer;
    font-size: {{ block.settings.font_size }}px;
    font-weight: 600;
    white-space: nowrap;
    border-radius: 0 {{ block.settings.border_radius }}px {{ block.settings.border_radius }}px 0;
  }

  .ai-search-bar-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-search-bar-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-search-bar-input-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.font_size }}px * 0.9);
    }

    .ai-search-bar-button-{{ ai_gen_id }} {
      padding: {{ block.settings.input_padding }}px 16px;
      font-size: calc({{ block.settings.font_size }}px * 0.9);
    }
  }
{% endstyle %}

<search-bar-{{ ai_gen_id }} class="ai-search-bar-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-search-bar-container-{{ ai_gen_id }}">
    <form action="{{ routes.search_url }}" method="get" role="search" class="ai-search-bar-form-{{ ai_gen_id }}">
      <div class="ai-search-bar-input-wrapper-{{ ai_gen_id }}">
        <div class="ai-search-bar-icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
          </svg>
        </div>
        <input
          type="search"
          name="q"
          class="ai-search-bar-input-{{ ai_gen_id }}"
          placeholder="{{ block.settings.placeholder_text }}"
          aria-label="Search"
          autocomplete="off"
        >
        {% if block.settings.show_button %}
          <button type="submit" class="ai-search-bar-button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </button>
        {% endif %}
      </div>
    </form>
  </div>
</search-bar-{{ ai_gen_id }}>

<script>
  (function() {
    class SearchBar{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.form = this.querySelector('.ai-search-bar-form-{{ ai_gen_id }}');
        this.input = this.querySelector('.ai-search-bar-input-{{ ai_gen_id }}');
        
        if (this.form && this.input) {
          this.form.addEventListener('submit', this.handleSubmit.bind(this));
        }
      }

      handleSubmit(event) {
        if (!this.input.value.trim()) {
          event.preventDefault();
        }
      }
    }

    customElements.define('search-bar-{{ ai_gen_id }}', SearchBar{{ ai_gen_id }});
  })();
</script>

{% schema %}
{
  "name": "Search bar",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Search input"
    },
    {
      "type": "text",
      "id": "placeholder_text",
      "label": "Placeholder text",
      "default": "Search products..."
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "input_padding",
      "label": "Input padding",
      "min": 8,
      "max": 24,
      "step": 2,
      "unit": "px",
      "default": 14
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    },
    {
      "type": "header",
      "content": "Search icon"
    },
    {
      "type": "range",
      "id": "icon_size",
      "label": "Icon size",
      "min": 16,
      "max": 32,
      "step": 2,
      "unit": "px",
      "default": 20
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon color",
      "default": "#121212"
    },
    {
      "type": "header",
      "content": "Search button"
    },
    {
      "type": "checkbox",
      "id": "show_button",
      "label": "Show search button",
      "default": true
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Search"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button color",
      "default": "#121212"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "Button hover color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#121212"
    },
    {
      "type": "color",
      "id": "placeholder_color",
      "label": "Placeholder color",
      "default": "#121212"
    },
    {
      "type": "range",
      "id": "border_thickness",
      "label": "Border thickness",
      "min": 0,
      "max": 4,
      "step": 1,
      "unit": "px",
      "default": 1
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border color",
      "default": "#121212"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Border radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Search bar"
    }
  ]
}
{% endschema %}
