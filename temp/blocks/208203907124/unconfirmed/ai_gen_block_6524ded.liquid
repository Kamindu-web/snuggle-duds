{% doc %}
  @prompt
    customized t shirt mockup
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-tshirt-mockup-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-tshirt-mockup-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    gap: 40px;
    align-items: center;
  }

  .ai-tshirt-mockup-preview-{{ ai_gen_id }} {
    flex: 1;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .ai-tshirt-mockup-tshirt-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: 500px;
  }

  .ai-tshirt-mockup-tshirt-base-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-tshirt-mockup-design-area-{{ ai_gen_id }} {
    position: absolute;
    top: 30%;
    left: 50%;
    transform: translateX(-50%);
    width: 40%;
    height: 35%;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }

  .ai-tshirt-mockup-custom-image-{{ ai_gen_id }} {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .ai-tshirt-mockup-custom-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: {{ block.settings.text_weight }};
    text-align: center;
    word-wrap: break-word;
    padding: 10px;
  }

  .ai-tshirt-mockup-controls-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .ai-tshirt-mockup-heading-{{ ai_gen_id }} {
    font-size: 32px;
    margin: 0 0 8px;
    color: {{ block.settings.heading_color }};
  }

  .ai-tshirt-mockup-subheading-{{ ai_gen_id }} {
    font-size: 16px;
    margin: 0 0 24px;
    color: {{ block.settings.text_color }};
  }

  .ai-tshirt-mockup-control-group-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-tshirt-mockup-label-{{ ai_gen_id }} {
    font-size: 14px;
    font-weight: 600;
    color: {{ block.settings.heading_color }};
  }

  .ai-tshirt-mockup-input-{{ ai_gen_id }} {
    padding: 12px 16px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 14px;
  }

  .ai-tshirt-mockup-color-options-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .ai-tshirt-mockup-color-option-{{ ai_gen_id }} {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    border: 3px solid transparent;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .ai-tshirt-mockup-color-option-{{ ai_gen_id }}:hover {
    transform: scale(1.1);
  }

  .ai-tshirt-mockup-color-option-{{ ai_gen_id }}.active {
    border-color: {{ block.settings.heading_color }};
    box-shadow: 0 0 0 2px {{ block.settings.background_color }};
  }

  .ai-tshirt-mockup-upload-btn-{{ ai_gen_id }} {
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

  .ai-tshirt-mockup-upload-btn-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-tshirt-mockup-file-input-{{ ai_gen_id }} {
    display: none;
  }

  .ai-tshirt-mockup-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-tshirt-mockup-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  @media screen and (max-width: 768px) {
    .ai-tshirt-mockup-container-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-tshirt-mockup-heading-{{ ai_gen_id }} {
      font-size: 24px;
    }
  }
{% endstyle %}

<tshirt-mockup-{{ ai_gen_id }} class="ai-tshirt-mockup-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-tshirt-mockup-container-{{ ai_gen_id }}">
    <div class="ai-tshirt-mockup-preview-{{ ai_gen_id }}">
      <div class="ai-tshirt-mockup-tshirt-{{ ai_gen_id }}">
        {% if block.settings.tshirt_image %}
          <svg class="ai-tshirt-mockup-tshirt-base-{{ ai_gen_id }}" viewBox="0 0 500 600" xmlns="http://www.w3.org/2000/svg">
            <path d="M150 50 L100 100 L100 600 L400 600 L400 100 L350 50 L320 80 L250 80 L180 80 Z" fill="currentColor" stroke="#333" stroke-width="2"/>
            <ellipse cx="250" cy="65" rx="35" ry="20" fill="currentColor" stroke="#333" stroke-width="2"/>
          </svg>
        {% else %}
          <div class="ai-tshirt-mockup-placeholder-{{ ai_gen_id }}">
            {{ 'product-apparel-1' | placeholder_svg_tag }}
          </div>
        {% endif %}
        
        <div class="ai-tshirt-mockup-design-area-{{ ai_gen_id }}">
          {% if block.settings.design_type == 'text' %}
            <div class="ai-tshirt-mockup-custom-text-{{ ai_gen_id }}">
              {{ block.settings.custom_text | default: 'Your Text Here' }}
            </div>
          {% elsif block.settings.design_type == 'image' and block.settings.custom_image %}
            <img 
              src="{{ block.settings.custom_image | image_url: width: 400 }}" 
              alt="Custom design" 
              class="ai-tshirt-mockup-custom-image-{{ ai_gen_id }}"
              loading="lazy"
            >
          {% endif %}
        </div>
      </div>
    </div>

    <div class="ai-tshirt-mockup-controls-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-tshirt-mockup-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}
      
      {% if block.settings.subheading != blank %}
        <p class="ai-tshirt-mockup-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
      {% endif %}

      <div class="ai-tshirt-mockup-control-group-{{ ai_gen_id }}">
        <label class="ai-tshirt-mockup-label-{{ ai_gen_id }}">Design type</label>
        <select class="ai-tshirt-mockup-input-{{ ai_gen_id }}" data-design-type>
          <option value="text" {% if block.settings.design_type == 'text' %}selected{% endif %}>Text</option>
          <option value="image" {% if block.settings.design_type == 'image' %}selected{% endif %}>Image</option>
        </select>
      </div>

      <div class="ai-tshirt-mockup-control-group-{{ ai_gen_id }}" data-text-control>
        <label class="ai-tshirt-mockup-label-{{ ai_gen_id }}">Custom text</label>
        <input 
          type="text" 
          class="ai-tshirt-mockup-input-{{ ai_gen_id }}" 
          placeholder="Enter your text"
          value="{{ block.settings.custom_text }}"
          data-text-input
        >
      </div>

      <div class="ai-tshirt-mockup-control-group-{{ ai_gen_id }}" data-image-control style="display: none;">
        <label class="ai-tshirt-mockup-label-{{ ai_gen_id }}">Upload design</label>
        <input 
          type="file" 
          accept="image/*" 
          class="ai-tshirt-mockup-file-input-{{ ai_gen_id }}"
          data-file-input
        >
        <button class="ai-tshirt-mockup-upload-btn-{{ ai_gen_id }}" data-upload-btn>
          Choose image
        </button>
      </div>

      <div class="ai-tshirt-mockup-control-group-{{ ai_gen_id }}">
        <label class="ai-tshirt-mockup-label-{{ ai_gen_id }}">T-shirt color</label>
        <div class="ai-tshirt-mockup-color-options-{{ ai_gen_id }}">
          <button 
            class="ai-tshirt-mockup-color-option-{{ ai_gen_id }} active" 
            style="background-color: {{ block.settings.color_1 }};"
            data-color="{{ block.settings.color_1 }}"
            aria-label="Select color 1"
          ></button>
          <button 
            class="ai-tshirt-mockup-color-option-{{ ai_gen_id }}" 
            style="background-color: {{ block.settings.color_2 }};"
            data-color="{{ block.settings.color_2 }}"
            aria-label="Select color 2"
          ></button>
          <button 
            class="ai-tshirt-mockup-color-option-{{ ai_gen_id }}" 
            style="background-color: {{ block.settings.color_3 }};"
            data-color="{{ block.settings.color_3 }}"
            aria-label="Select color 3"
          ></button>
          <button 
            class="ai-tshirt-mockup-color-option-{{ ai_gen_id }}" 
            style="background-color: {{ block.settings.color_4 }};"
            data-color="{{ block.settings.color_4 }}"
            aria-label="Select color 4"
          ></button>
        </div>
      </div>
    </div>
  </div>
</tshirt-mockup-{{ ai_gen_id }}>

<script>
  (function() {
    class TshirtMockup{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.designTypeSelect = this.querySelector('[data-design-type]');
        this.textInput = this.querySelector('[data-text-input]');
        this.fileInput = this.querySelector('[data-file-input]');
        this.uploadBtn = this.querySelector('[data-upload-btn]');
        this.colorOptions = this.querySelectorAll('.ai-tshirt-mockup-color-option-{{ ai_gen_id }}');
        this.tshirtBase = this.querySelector('.ai-tshirt-mockup-tshirt-base-{{ ai_gen_id }}');
        this.designArea = this.querySelector('.ai-tshirt-mockup-design-area-{{ ai_gen_id }}');
        this.textControl = this.querySelector('[data-text-control]');
        this.imageControl = this.querySelector('[data-image-control]');

        this.setupEventListeners();
        this.updateDesignTypeVisibility();
      }

      setupEventListeners() {
        if (this.designTypeSelect) {
          this.designTypeSelect.addEventListener('change', () => {
            this.updateDesignTypeVisibility();
            this.updateDesign();
          });
        }

        if (this.textInput) {
          this.textInput.addEventListener('input', (e) => {
            this.updateTextDesign(e.target.value);
          });
        }

        if (this.uploadBtn) {
          this.uploadBtn.addEventListener('click', () => {
            this.fileInput.click();
          });
        }

        if (this.fileInput) {
          this.fileInput.addEventListener('change', (e) => {
            this.handleImageUpload(e);
          });
        }

        this.colorOptions.forEach((option) => {
          option.addEventListener('click', () => {
            this.updateTshirtColor(option);
          });
        });
      }

      updateDesignTypeVisibility() {
        const designType = this.designTypeSelect.value;
        
        if (designType === 'text') {
          this.textControl.style.display = 'flex';
          this.imageControl.style.display = 'none';
        } else {
          this.textControl.style.display = 'none';
          this.imageControl.style.display = 'flex';
        }
      }

      updateDesign() {
        const designType = this.designTypeSelect.value;
        
        if (designType === 'text') {
          this.designArea.innerHTML = '<div class="ai-tshirt-mockup-custom-text-{{ ai_gen_id }}">' + 
            (this.textInput.value || 'Your Text Here') + 
            '</div>';
        } else {
          this.designArea.innerHTML = '';
        }
      }

      updateTextDesign(text) {
        const textElement = this.designArea.querySelector('.ai-tshirt-mockup-custom-text-{{ ai_gen_id }}');
        if (textElement) {
          textElement.textContent = text || 'Your Text Here';
        }
      }

      handleImageUpload(event) {
        const file = event.target.files[0];
        if (file && file.type.startsWith('image/')) {
          const reader = new FileReader();
          reader.onload = (e) => {
            this.designArea.innerHTML = '<img src="' + e.target.result + '" alt="Custom design" class="ai-tshirt-mockup-custom-image-{{ ai_gen_id }}">';
          };
          reader.readAsDataURL(file);
        }
      }

      updateTshirtColor(selectedOption) {
        this.colorOptions.forEach((option) => {
          option.classList.remove('active');
        });
        selectedOption.classList.add('active');
        
        const color = selectedOption.getAttribute('data-color');
        if (this.tshirtBase) {
          this.tshirtBase.style.color = color;
        }
      }
    }

    customElements.define('tshirt-mockup-{{ ai_gen_id }}', TshirtMockup{{ ai_gen_id }});
  })();
</script>

