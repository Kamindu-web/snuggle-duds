    max-width: 150px;
    margin: 12px auto 0;
    border-radius: 8px;
    overflow: hidden;
    display: none;
  }

  .ai-custom-apparel-preview-thumb-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-custom-apparel-options-grid-{{ ai_gen_id }} {
