{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-custom-apparel-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 20px;
  }

  .ai-custom-apparel-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-custom-apparel-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
    text-align: center;
    margin: 0 0 40px;
    font-weight: 700;
  }

  .ai-custom-apparel-layout-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 40px;
  }

  .ai-custom-apparel-preview-section-{{ ai_gen_id }} {
    background-color: {{ block.settings.preview_bg_color }};
    border-radius: {{ block.settings.border_radius }}px;
    padding: 40px;
    position: sticky;
    top: 20px;
    height: fit-content;
  }

  .ai-custom-apparel-product-tabs-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
    margin-bottom: 24px;
    flex-wrap: wrap;
  }

  .ai-custom-apparel-tab-{{ ai_gen_id }} {
    padding: 12px 20px;
    background-color: #ffffff;
    border: 2px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.button_radius }}px;
    cursor: pointer;
    font-size: 14px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    transition: all 0.3s ease;
  }

  .ai-custom-apparel-tab-{{ ai_gen_id }}:hover,
  .ai-custom-apparel-tab-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.accent_color }};
    border-color: {{ block.settings.accent_color }};
    color: #ffffff;
  }

  .ai-custom-apparel-mockup-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: 1;
    background-color: #f5f5f5;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-custom-apparel-mockup-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .ai-custom-apparel-mockup-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f9f9f9;
  }

  .ai-custom-apparel-mockup-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.2;
  }

  .ai-custom-apparel-design-overlay-{{ ai_gen_id }} {
    position: absolute;
    pointer-events: none;
    transition: all 0.3s ease;
    max-width: 40%;
    max-height: 40%;
  }

  .ai-custom-apparel-design-overlay-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .ai-custom-apparel-controls-section-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_bg_color }};
    border-radius: {{ block.settings.border_radius }}px;
    padding: 32px;
  }

  .ai-custom-apparel-control-group-{{ ai_gen_id }} {
    margin-bottom: 28px;
    padding-bottom: 28px;
    border-bottom: 1px solid {{ block.settings.border_color }};
  }

  .ai-custom-apparel-control-group-{{ ai_gen_id }}:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
  }

  .ai-custom-apparel-control-label-{{ ai_gen_id }} {
    display: block;
    font-size: 14px;
    font-weight: 700;
    color: {{ block.settings.text_color }};
    margin-bottom: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-custom-apparel-upload-area-{{ ai_gen_id }} {
    border: 2px dashed {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    padding: 32px;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
    background-color: #fafafa;
  }

  .ai-custom-apparel-upload-area-{{ ai_gen_id }}:hover {
    border-color: {{ block.settings.accent_color }};
    background-color: #f0f0f0;
  }

  .ai-custom-apparel-upload-icon-{{ ai_gen_id }} {
    font-size: 48px;
    color: {{ block.settings.accent_color }};
    margin-bottom: 12px;
  }

  .ai-custom-apparel-upload-text-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  .ai-custom-apparel-file-input-{{ ai_gen_id }} {
    display: none;
  }

  .ai-custom-apparel-preview-thumb-{{ ai_gen_id }} {
