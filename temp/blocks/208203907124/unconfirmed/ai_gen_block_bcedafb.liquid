    background-color: {{ block.settings.accent_color }};
    border-color: {{ block.settings.accent_color }};
    color: #ffffff;
  }

  .ai-custom-apparel-slider-container-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .ai-custom-apparel-slider-{{ ai_gen_id }} {
    flex: 1;
    height: 6px;
    border-radius: 3px;
    background-color: {{ block.settings.border_color }};
    outline: none;
    appearance: none;
  }

  .ai-custom-apparel-slider-{{ ai_gen_id }}::-webkit-slider-thumb {
    appearance: none;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background-color: {{ block.settings.accent_color }};
    cursor: pointer;
  }

  .ai-custom-apparel-slider-{{ ai_gen_id }}::-moz-range-thumb {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background-color: {{ block.settings.accent_color }};
    cursor: pointer;
    border: none;
  }

  .ai-custom-apparel-slider-value-{{ ai_gen_id }} {
    min-width: 50px;
    text-align: right;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    font-size: 14px;
  }

  .ai-custom-apparel-input-{{ ai_gen_id }} {
    width: 100%;
    padding: 12px 16px;
    border: 2px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.button_radius }}px;
    font-size: 14px;
    color: {{ block.settings.text_color }};
    transition: all 0.3s ease;
  }

  .ai-custom-apparel-input-{{ ai_gen_id }}:focus {
    outline: none;
    border-color: {{ block.settings.accent_color }};
  }

  .ai-custom-apparel-textarea-{{ ai_gen_id }} {
    width: 100%;
    padding: 12px 16px;
    border: 2px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.button_radius }}px;
    font-size: 14px;
    color: {{ block.settings.text_color }};
    min-height: 100px;
    resize: vertical;
    font-family: inherit;
    transition: all 0.3s ease;
  }

  .ai-custom-apparel-textarea-{{ ai_gen_id }}:focus {
    outline: none;
    border-color: {{ block.settings.accent_color }};
  }

  .ai-custom-apparel-submit-btn-{{ ai_gen_id }} {
    width: 100%;
    padding: 16px 32px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_radius }}px;
    font-size: 16px;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .ai-custom-apparel-submit-btn-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    transform: translateY(-2px);
  }

  .ai-custom-apparel-success-message-{{ ai_gen_id }} {
    background-color: #d4edda;
    color: #155724;
    padding: 16px;
    border-radius: {{ block.settings.button_radius }}px;
    margin-top: 16px;
    text-align: center;
    display: none;
  }

  .ai-custom-apparel-error-message-{{ ai_gen_id }} {
    background-color: #f8d7da;
    color: #721c24;
    padding: 16px;
    border-radius: {{ block.settings.button_radius }}px;
    margin-top: 16px;
    text-align: center;
    display: none;
  }

  @media screen and (max-width: 990px) {
    .ai-custom-apparel-layout-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .ai-custom-apparel-preview-section-{{ ai_gen_id }} {
      position: relative;
      top: 0;
    }

    .ai-custom-apparel-options-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
    }
  }

  @media screen and (max-width: 749px) {
    .ai-custom-apparel-product-tabs-{{ ai_gen_id }} {
      grid-template-columns: repeat(3, 1fr);
    }

    .ai-custom-apparel-tab-{{ ai_gen_id }} {
      padding: 10px 12px;
      font-size: 12px;
    }
  }
{% endstyle %}

