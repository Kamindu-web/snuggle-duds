  (function() {
    class AiCustomApparel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.designOverlay = null;
        this.uploadedDesign = null;
      }

      connectedCallback() {
        this.setupProductTabs();
        this.setupFileUpload();
        this.setupPlacementOptions();
        this.setupSizeOptions();
        this.setupSliders();
      }

      setupProductTabs() {
        const tabs = this.querySelectorAll('.ai-custom-apparel-tab-{{ ai_gen_id }}');
        const mockups = this.querySelectorAll('[data-mockup]');
        const productTypeInput = this.querySelector('#productTypeInput{{ ai_gen_id }}');

        tabs.forEach(tab => {
          tab.addEventListener('click', () => {
            tabs.forEach(t => t.classList.remove('active'));
            tab.classList.add('active');

            const productType = tab.getAttribute('data-product');
            productTypeInput.value = productType;

            mockups.forEach(mockup => {
              if (mockup.getAttribute('data-mockup') === productType) {
                mockup.style.display = 'flex';
                mockup.classList.add('active');
              } else {
                mockup.style.display = 'none';
                mockup.classList.remove('active');
              }
            });
          });
        });
      }

      setupFileUpload() {
        const uploadArea = this.querySelector('#uploadArea{{ ai_gen_id }}');
        const fileInput = this.querySelector('#designUpload{{ ai_gen_id }}');
        const previewThumb = this.querySelector('#previewThumb{{ ai_gen_id }}');
        this.designOverlay = this.querySelector('.ai-custom-apparel-design-overlay-{{ ai_gen_id }}');

        uploadArea.addEventListener('click', () => fileInput.click());

        fileInput.addEventListener('change', (e) => {
          const file = e.target.files[0];
          if (file) {
            const reader = new FileReader();
            reader.onload = (event) => {
              this.uploadedDesign = event.target.result;
              previewThumb.querySelector('img').src = this.uploadedDesign;
              previewThumb.style.display = 'block';
              
              this.designOverlay.innerHTML = '<img src="' + this.uploadedDesign + '" alt="Custom design">';
            };
            reader.readAsDataURL(file);
          }
        });

        uploadArea.addEventListener('dragover', (e) => {
          e.preventDefault();
          uploadArea.style.borderColor = '{{ block.settings.accent_color }}';
        });

        uploadArea.addEventListener('dragleave', () => {
          uploadArea.style.borderColor = '{{ block.settings.border_color }}';
        });

        uploadArea.addEventListener('drop', (e) => {
          e.preventDefault();
          uploadArea.style.borderColor = '{{ block.settings.border_color }}';
          
          const file = e.dataTransfer.files[0];
          if (file && file.type.startsWith('image/')) {
            fileInput.files = e.dataTransfer.files;
            fileInput.dispatchEvent(new Event('change'));
          }
        });
      }

      setupPlacementOptions() {
        const placementButtons = this.querySelectorAll('[data-placement]');
        const placementInput = this.querySelector('#placementInput{{ ai_gen_id }}');

        placementButtons.forEach(button => {
          button.addEventListener('click', () => {
            placementButtons.forEach(btn => btn.classList.remove('active'));
            button.classList.add('active');
            placementInput.value = button.getAttribute('data-placement');
          });
        });
      }

      setupSizeOptions() {
        const sizeButtons = this.querySelectorAll('[data-size]');
        const sizeInput = this.querySelector('#sizeSelectInput{{ ai_gen_id }}');

        sizeButtons.forEach(button => {
          button.addEventListener('click', () => {
            sizeButtons.forEach(btn => btn.classList.remove('active'));
            button.classList.add('active');
            sizeInput.value = button.getAttribute('data-size');
          });
        });
      }

      setupSliders() {
        const sizeSlider = this.querySelector('#sizeSlider{{ ai_gen_id }}');
        const sizeValue = this.querySelector('#sizeValue{{ ai_gen_id }}');
        const sizeInput = this.querySelector('#sizeInput{{ ai_gen_id }}');

        const rotationSlider = this.querySelector('#rotationSlider{{ ai_gen_id }}');
        const rotationValue = this.querySelector('#rotationValue{{ ai_gen_id }}');
        const rotationInput = this.querySelector('#rotationInput{{ ai_gen_id }}');

        const verticalSlider = this.querySelector('#verticalSlider{{ ai_gen_id }}');
        const verticalValue = this.querySelector('#verticalValue{{ ai_gen_id }}');
        const verticalInput = this.querySelector('#verticalInput{{ ai_gen_id }}');

        const horizontalSlider = this.querySelector('#horizontalSlider{{ ai_gen_id }}');
        const horizontalValue = this.querySelector('#horizontalValue{{ ai_gen_id }}');
        const horizontalInput = this.querySelector('#horizontalInput{{ ai_gen_id }}');

        sizeSlider.addEventListener('input', () => {
          const value = sizeSlider.value;
          sizeValue.textContent = value + '%';
          sizeInput.value = value;
          this.updateDesignOverlay();
        });

        rotationSlider.addEventListener('input', () => {
          const value = rotationSlider.value;
          rotationValue.textContent = value + 'Â°';
          rotationInput.value = value;
          this.updateDesignOverlay();
        });

        verticalSlider.addEventListener('input', () => {
          const value = verticalSlider.value;
          verticalValue.textContent = value + '%';
          verticalInput.value = value;
          this.updateDesignOverlay();
        });

        horizontalSlider.addEventListener('input', () => {
          const value = horizontalSlider.value;
          horizontalValue.textContent = value + '%';
          horizontalInput.value = value;
          this.updateDesignOverlay();
        });
      }

      updateDesignOverlay() {
        const size = this.querySelector('#sizeSlider{{ ai_gen_id }}').value;
        const rotation = this.querySelector('#rotationSlider{{ ai_gen_id }}').value;
        const vertical = this.querySelector('#verticalSlider{{ ai_gen_id }}').value;
        const horizontal = this.querySelector('#horizontalSlider{{ ai_gen_id }}').value;

        this.designOverlay.style.maxWidth = size + '%';
        this.designOverlay.style.maxHeight = size + '%';
        this.designOverlay.style.top = vertical + '%';
        this.designOverlay.style.left = horizontal + '%';
        this.designOverlay.style.transform = 'translate(-50%, -50%) rotate(' + rotation + 'deg)';
      }
    }

    customElements.define('ai-custom-apparel-{{ ai_gen_id }}', AiCustomApparel{{ ai_gen_id }});
  })();
</script>

